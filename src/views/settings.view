.clearboth {
  clear: both;
}


.wayixia-assistant {
  text-indent: 20px; 
  background:#FFF url(images/sprite_ok.png) left center no-repeat;
}

.wayixia-assistant.ok {
  background-image: url(images/sprite_ok.png)
}

