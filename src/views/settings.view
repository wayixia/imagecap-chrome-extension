  overflow:auto;
}

#layer-block-images #wayixia-container {
  top: 0;
}

#layer-options {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  line-height: 30px;
  font-size: 16px;
  padding: 10px 0;
  overflow:auto;
  visibility: hidden;
}


.q-tabs.v-property {
  border-width: 0;
}



.q-tabs.v-property .q-tabs-header {
  float: left; 
  width: 150px;
}

.q-tabs.v-property .q-tabs-header ul {
  padding: 0 5px 0 5px;
  list-style: none;
  margin:0;
