{
   "name": "__MSG_extName__",
   "version": "1.26",
   "default_locale" : "en",
   "manifest_version": 3,
   "short_name": "__MSG_extShortName__",
   "description": "__MSG_extDescription__",
   "permissions": [ 
      "activeTab", 
      "tabs", 
      "contextMenus", 
      "downloads", 
      "webRequest",
      "offscreen",
      "storage"
    ],

    "host_permissions":[ "<all_urls>" ],

   "background": {
      "service_worker":  "background/background.js",
      "type": "module"
   },
   "content_scripts": [ 
     {
      "js": [ "scripts/app.bundle.js", "content/content.js" ],
      "css": [],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
     } 
   ],
   "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' ;"
   },
   "icons": {
      "128": "assets/icons/icon128.png",
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
   },
   "action" : {
     "default_title" : "__MSG_extName__",
     "default_icon"  : "assets/icons/icon128.png",
     "default_popup" : "popup/popup.html"
   },

   "commands": {
     "toggle-wa-all": {
       "suggested_key": { "default": "Ctrl+Q" },
       "description": "Toggle Wa all images"
     }
   }
}
